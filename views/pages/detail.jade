extends ../layout
block content
    .container
        .row
            .col-md-7
                embed(src="#{movie.flash}", allowFullScreen="true", quality="high", width="720px", height="480px", align="middle", type="application/x-shockwave-flash")
            .col-md-5
                dl.dl-horizontal
                    dt 電影名稱
                    dd=movie.title
                    dt 導演
                    dd=movie.doctor
                    dt 國家
                    dd=movie.country
                    dt 語言
                    dd=movie.lan
                    dt 上映年份
                    dd=movie.year
                    dt 簡介
                    dd=movie.summary